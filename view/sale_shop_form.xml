<form col="4">
    <label name="name"/>
    <field name="name"/>
    <label name="active"/>
    <field name="active"/>
    <label name="company"/>
    <field name="company"/>
    <label name="address"/>
    <field name="address"/>
    <label name="warehouse"/>
    <field name="warehouse"/>
    <notebook colspan="4">
        <page string="General" id="general">
            <label name="sale_sequence"/>
            <field name="sale_sequence"/>
            <newline />
            <label name="sale_invoice_method" />
            <field name="sale_invoice_method" />
            <label name="sale_shipment_method" />
            <field name="sale_shipment_method" />
            <label name="currency"/>
            <field name="currency"/>
            <label name="price_list"/>
            <field name="price_list"/>
            <label name="payment_term"/>
            <field name="payment_term"/>
        </page>
        <page string="Trade Information" id="trade_info">
			<label name="company_trade_name"/>
			<field name="company_trade_name"/>
			<label name="lang"/>
			<field name="lang"/>
            <label name="phone"/>
            <field name="phone"/>
            <label name="email"/>
            <field name="email"/>
            <label name="website"/>
            <field name="website" widget="url"/>
			<label name="logo"/>
			<field name="logo"/>
		</page>
        <page string="Users" id="users">
            <field name="users"/>
        </page>
    </notebook>
</form>
